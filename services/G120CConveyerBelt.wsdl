<?xml version="1.0"?>
<definitions

name="StockQuote"
targetNamespace="http://example.com/stockquote.wsdl"
xmlns:tns="http://example.com/stockquote.wsdl"
xmlns:xsd1="http://example.com/stockquote.xsd"
xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
xmlns="http://schemas.xmlsoap.org/wsdl/">
	

	<service name="turnLightOnAndOff">
        <documentation>This Service moves the conveyer belt</documentation>
        <port name="HWD_Transport" binding="tns:MoveConveyerBelt">
           <soap:address location="opc.tcp://141.58.122.40:4841"/>
        </port>
    </service>

	<portType name="HWD">
        <operation name="moveConveyerBelt">
           <input message="StartBelt"/>
           <output message="processDone"/>
        </operation>
    </portType>
	
	<message name="moveConveyerBelt">
        <part name="body" element="xsd1:Switch"/>
    </message>

    <message name="processDone">
        <part name="body" element="xsd1:Status"/>
    </message>

    <types>
       <schema targetNamespace="http://example.com/stockquote.xsd" xmlns="http://www.w3.org/2000/10/XMLSchema">
           <element name="Switch">
              <complexType>
                  <all>
                      <element name="ns=2;s=19372.local" type="bool" value="true"/>
                  </all>
              </complexType>
           </element>
           <element name="Status">
              <complexType>
                  <all>
                      <element name="19373.Var3_Boolean" type="boolean" value=""/>
                  </all>
              </complexType>
           </element>
       </schema>
    </types>

</definitions>